frontend/podcaster-fe/yarn-error.log*

## Backend ##

# Ignore bundler config.
backend/podcaster-be/.bundle

# Ignore the default SQLite database.
backend/podcaster-be/db/*.sqlite3
backend/podcaster-be/db/*.sqlite3-journal
backend/podcaster-be/db/*.sqlite3-*

# Ignore all logfiles and tempfiles.
backend/podcaster-be/log/*
backend/podcaster-be/tmp/*
backend/podcaster-be/!/log/.keep
backend/podcaster-be/!/tmp/.keep

# Ignore pidfiles, but keep the directory.
backend/podcaster-be/tmp/pids/*
backend/podcaster-be/!/tmp/pids/
backend/podcaster-be/!/tmp/pids/.keep

# Ignore uploaded files in development.
backend/podcaster-be/storage/*
backend/podcaster-be/!/storage/.keep
backend/podcaster-be/.byebug_history

# Ignore master key for decrypting credentials and more.
backend/podcaster-be/config/master.key